{
  "name": "netradar",
  "version": "0.1.0",
  "description": "Real-time network signal visualization for macOS",
  "private": true,
  "main": "out/main/index.js",
  "scripts": {
    "build-oui": "node scripts/build-oui.mjs",
    "dev": "electron-vite dev",
    "dev:debug": "electron-vite dev --remoteDebuggingPort 9222",
    "build": "pnpm run build-oui && electron-vite build",
    "preview": "electron-vite preview",
    "dist": "pnpm run build && electron-builder",
    "install-app": "pnpm run dist && rm -rf /Applications/NetRadar.app && cp -R release/mac-arm64/NetRadar.app /Applications/NetRadar.app && echo 'NetRadar installed to /Applications'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@base-ui/react": "^1.2.0",
    "@fontsource-variable/inter": "^5.2.8",
    "bonjour-service": "^1.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "d3": "^7.9.0",
    "lucide-react": "^0.574.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "shadcn": "^3.8.5",
    "tailwind-merge": "^3.4.1",
    "tw-animate-css": "^1.4.0"
  },
  "build": {
    "appId": "com.netradar.app",
    "productName": "NetRadar",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities",
      "target": "dir",
      "extendInfo": {
        "NSLocationWhenInUseUsageDescription": "NetRadar needs location access to read Wi-Fi SSID names."
      }
    },
    "files": [
      "out/**/*"
    ],
    "npmRebuild": false
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@types/d3": "^7.4.3",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "vite": "^7.2.4"
  }
}
